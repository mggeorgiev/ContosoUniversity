@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-light bg-light navbar-right">
        <li class = "nav-link">
            @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    </ul>
    }
}
else
{
    <ul class="navbar-nav">
        <li class = "nav-item">@Html.ActionLink("Register", "Register", "Account", null, new { @class="nav-link", id="registerLink" })</li>
        <li class = "nav-item">@Html.ActionLink("Log in", "Login", "Account", null, new { @class= "nav-link", id = "loginLink" })</li>
    </ul>
}
